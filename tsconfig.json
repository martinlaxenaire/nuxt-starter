{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "@nuxt/types",
            "@nuxt/typescript-build",
            "@nuxtjs/axios",
            "@types/node",
            "nuxt-i18n",
            "@roadiz/nuxt-module",
            "@nuxtjs/sentry",
            "@nuxt/image",
            "@nuxtjs/recaptcha"
        ]
    },
    "exclude": [
        "node_modules",
        ".nuxt",
        "dist"
    ]
}
